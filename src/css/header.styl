@import 'lib';


header
  align-items center
  background $color--white
  border-bottom $color--grey solid 1px
  display flex
  height 60px
  padding 0 60px
  justify-content space-between

  h1
    color $color--highlight

.header--login
  align-items center
  display flex
  flex-wrap nowrap

  button
    background $color--white
    border-radius 5px
    border 2px solid $color--universal
    color $color--universal
    height 40px
    margin 0 10px
    padding 0 10px

    &:hover
      background $color--universal
      color $color--white
