@import 'lib';


*
  box-sizing border-box

html,
body,
.app-container
  height 100%
  margin 0
  padding 0

body
  background $color--grey-light;
  overflow-x hidden

ul
  list-style none

html,
body,
.app-container
  min-height 100%
  width 100%

.app
  display flex
  min-height 100%;
  flex-direction column

main
  flex 1
  margin 30px
  padding 30px

footer
  align-self flex-end

menu
  padding-left 0

input,
textarea
  border 1px solid $color--grey
  padding 10px
  
.fullscreen
  align-items center
  background #FFF
  display flex
  height 100%
  justify-content center
  left 0
  padding 5%
  position fixed
  top 0
  width 100%
  
