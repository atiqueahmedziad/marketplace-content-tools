@import 'lib';


html,
body
  height 100%
  margin 0
  padding 0

body
  background $color--grey-light;
  overflow-x hidden

ul
  list-style none

html,
body,
.app
  min-height 100%
  width 100%

.app
  display flex
  min-height 100%;
  flex-direction column

main
  flex 1
  margin 30px
  padding 30px

footer
  align-self flex-end

menu
  padding-left 0

input,
textarea
  border 1px solid $color--grey
  padding 10px
