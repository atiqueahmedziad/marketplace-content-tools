@import 'lib';


.form-block
  display flex
  flex-direction column

  button
    margin 10px 0 0
    width 502px

.form-block--group
  margin-bottom 30px

  label
    display block
    font-weight 400
    margin-bottom 10px
  input:not([type="radio"]),
  textarea
    width 480px

.form-block--radio > label
  display inline-block
  font-weight 300
  margin-bottom 0
  padding: 5px 50px 5px 10px

.form-inline
  label
    font-weight 400
    margin-right 10px
  input
    margin-right 10px
    width 600px

.form-msg--success p
  margin-top 0

.form-msg--error
  color $color--assertive

.Select .Select-option.is-focused
  background $color--primary
  color $color--white

.form-inline--file-input
  background $color--primary
  border 2px dotted $color--grey;
  border-radius 5px
  color $color--white
  cursor pointer
  margin-right 10px
  padding 10px
  transition background .2s
  width 300px

  &:hover
    background $color--primary-hover
  &[data-file-input--has-data="true"]
    border-style solid
