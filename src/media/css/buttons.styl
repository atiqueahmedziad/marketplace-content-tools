@import 'lib';


button
  background $color--primary
  border 0
  border-radius 5px
  color $color--white
  line-height 0
  height 40px
  margin-right 10px
  padding 10px
  transition background .2s

  &:hover
    background $color--primary-hover
    cursor pointer

    a
      color $color--white
  &[disabled],
  &[disabled]:hover
    background $color--disabled
  &.button--success
    background $color--success

    &:hover
      background $color--success-hover
  a
    color $color--white
