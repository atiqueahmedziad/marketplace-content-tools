@import 'lib';


.review-listing
  display flex
  flex-wrap wrap
  margin 0
  padding 0

.review-listing-item
  background $color--white
  border-radius 5px
  box-shadow 0 0 1px 1px $color--grey-dark
  margin 20px 20px 20px 0
  padding 15px
  width 320px

.review-listing-item-header
  display flex
  margin-bottom 20px

.review-listing-icon
  height 64px
  margin-right 15px
  width 64px

.review-listing-details
  dd
    font-weight 400
    margin 20px 0 5px
    padding 0
  dt
    font-weight 300
  dt + dt
    margin-top 5px

.review-listing-actions
  display flex
  justify-content flex-end
  margin-top 20px
