@import 'lib';

body
  font-family $font--primary
  font-size 15px

a
  color $color--primary
  transition color .2s

  &:hover
    color $color--primary-hover
    cursor pointer

body
  color $color--body-text

button
  color $color--white

h1, h2, h3, h4, h5, h6
  font-weight 300

p
  line-height 22px
