@import 'lib';

$page--spacing = 35px


.page
  padding $page--spacing


.page--header
  align-items flex-end
  justify-content space-between

  h1
    font-size 28px
    font-weight 400
    margin 0


.page--subnav
  background $color--blue-dark
  display flex
  font-weight 300
  justify-content center
  height 50px
  margin (-1 * $page--spacing) (-1 * $page--spacing) $page--spacing

  ul
    align-items center
    display flex
    justify-content center
    margin 0
    padding 0

  li
    margin 0 10px

  a
    border-radius 5px
    color $color--white
    font-size 13px
    padding 8px 8px 6px
    text-decoration none
    transition background-color 0.05s linear, color 0.05s linear

    &:hover
      background alpha($color--white, 0.15)
      color $color--white

    &.active
      background $color--white
      color $color--blue-dark
