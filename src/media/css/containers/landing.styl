@import '../lib'


.landing .page--main
  align-items center
  display flex
  justify-content space-between
  text-align center


.landing--header
  width 60%

  h1
    font-size 36px
    font-weight 400
    margin 0

  h2
    font-size 30px
    margin 12px 0 18px

  p
    font-size 24px
    margin 0


.landing--content
  background #FFF
  border-radius 5px
  padding 25px
  width 33%

  section
    border-bottom 1px solid $color--grey
    margin-bottom 25px
    padding-bottom 25px

    &:last-child
      border-bottom 0
      margin-bottom 0
      padding-bottom 0

  p
    font-size 18px
    line-height 24px

  button
    display block
    width 100%

  a
    display block

.landing--submit
  p
    margin-top 0
